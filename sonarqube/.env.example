# SonarQube Configuration
# Copy this file to .env and update with your values

# Database password (IMPORTANT: Change this!)
SONAR_DB_PASSWORD=your_secure_password_here

# SonarQube admin credentials (change after first login)
SONAR_ADMIN_USER=admin
SONAR_ADMIN_PASSWORD=admin

# Backup settings
BACKUP_RETENTION_DAYS=30
COLD_STORAGE_DAYS=180
MAX_ACTIVE_ANALYSES=250

# Storage paths
COLD_STORAGE_PATH=/mnt/usb-backup/sonarqube-cold-storage
BACKUP_PATH=/mnt/usb-backup/sonarqube-backups
